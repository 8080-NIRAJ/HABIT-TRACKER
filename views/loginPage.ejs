<!-- Login Page View -->
<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body text-center">
      <h1><i class="fa-solid fa-bullseye fa-beat"></i>Habit Tracker
      
       
    </h1>
      <h3 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i> Login</h3>
       <!-- Include partial messages for displaying notifications -->
      <%- include ("./partials/messages") %>
       <!-- Login Form -->
      <form action="/users/login" method="POST">
          <!-- Email Input -->
        <div class="form-group">
          <label for="email">Email</label>
          <input type="email" id="email" name="email" required class="form-control" placeholder="Enter Email" />
        </div>
         <!-- Login Button -->
        <button type="submit" class="btn btn-primary btn-block">Login</button>
      </form>
      <!-- Link to Register for new users -->
      <h4 class="lead mt-4">
        New User? <a href="/users/register">Register</a>
      </h4>
    </div>
  </div>
</div>